<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_second_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F7FC"
    android:orientation="vertical">
    <com.zhy.autolayout.AutoLinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40px"/>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_marginBottom="30px"
            android:layout_marginRight="50px"
            android:layout_marginTop="30px"
            android:layout_toLeftOf="@+id/iv_setting"
            android:src="@mipmap/message" />

        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="30px"
            android:src="@mipmap/shezhi" />


    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30px"
            android:layout_marginTop="30px"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_myicon"
                android:layout_width="118px"
                android:layout_height="118px"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26px"
                android:text="流光溢彩"
                android:textColor="#2E3136"
                android:textSize="30px"
                android:textStyle="bold"
                android:visibility="gone" />

            <Button
                android:id="@+id/bt_login"
                android:layout_width="170px"
                android:layout_height="70px"
                android:background="@drawable/textviewblue"
                android:padding="10px"
                android:text="登录"
                android:textColor="#059FFF"
                android:textSize="32px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:text="登录后获得更多精彩"
                android:textColor="#9C9C9C"
                android:textSize="24px" />


        </com.zhy.autolayout.AutoLinearLayout>


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25px"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_xunche"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tv_xunche"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:src="@mipmap/daikuan"
                    android:text="0"
                    android:textColor="#FF2E3136"
                    android:textSize="32px"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="我的贷款"
                    android:textColor="#787880"
                    android:textSize="24px" />

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_fabu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tv_fabu"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:src="@mipmap/daikuan"
                    android:text="0"
                    android:textColor="#FF2E3136"
                    android:textSize="32px"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="我的保险"
                    android:textColor="#787880"
                    android:textSize="24px" />

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_jingjia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"

                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_jingjia"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:src="@mipmap/daikuan"
                    android:text="0"
                    android:textColor="#FF2E3136"
                    android:textSize="32px"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="提前还款"
                    android:textColor="#787880"
                    android:textSize="24px" />

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_jingjia_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"

                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_jingjia_1"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:src="@mipmap/daikuan"
                    android:text="0"
                    android:textColor="#FF2E3136"
                    android:textSize="32px"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:text="还款计划"
                    android:textColor="#787880"
                    android:textSize="24px" />

            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23px"
        android:background="@color/white"
        android:orientation="vertical">


        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_yundan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="25px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="我的银行卡"
                android:textColor="#2C2D33"
                android:textSize="28px" />

            <ImageView
                style="@style/iv_1"
                android:src="@mipmap/arrow_right" />

        </com.zhy.autolayout.AutoRelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#F4F7FC" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_gaizhuang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="25px">

            <TextView
                style="@style/tv_4"
                android:text="我的借款合同" />

            <ImageView
                style="@style/iv_1"
                android:src="@mipmap/arrow_right" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#F4F7FC" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_pinche"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="25px">

            <TextView
                style="@style/tv_4"
                android:text="我的客户经理" />

            <ImageView
                style="@style/iv_1"
                android:src="@mipmap/arrow_right" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="15px"
            android:background="#F4F7FC" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_bangzhu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="25px">

            <TextView
                style="@style/tv_4"
                android:text="我的保险理赔进度或明细" />

            <ImageView
                style="@style/iv_1"
                android:src="@mipmap/arrow_right" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="15px"
            android:background="#F4F7FC" />

        <com.zhy.autolayout.AutoRelativeLayout

            android:id="@+id/rl_kefu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="25px">

            <TextView
                style="@style/tv_4"
                android:text="联系客服" />

            <ImageView
                style="@style/iv_1"
                android:src="@mipmap/arrow_right" />

        </com.zhy.autolayout.AutoRelativeLayout>


    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>